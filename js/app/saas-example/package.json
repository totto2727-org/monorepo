{
  "name": "@app/saas-example",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./app/*",
    "#api/*": "./api/*",
    "#public/*": "./bin/public/*",
    "#bin/*": "./bin/*",
    "#@/*": "./src/*"
  },
  "scripts": {
    "fix": "bun run eslint --fix",
    "check": "bun run --parallel check:*",
    "check:tsgo": "tsgo",
    "check:eslint": "bun run eslint",
    "eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "dev": "tsr watch & NODE_ENV=development bun run --hot bin/dev.ts | bunx pino-pretty",
    "prebuild": "bun run --parallel prebuild:*",
    "prebuild:wragler": "wrangler types",
    "prebuild:tsr": "tsr generate",
    "prebuild:kysely": "kysely-codegen --dialect libsql --url file:$(bunx @dotenvx/dotenvx get LOCAL_DATABASE_URL -e .env) --camel-case --out-file src/db/generated.ts --exclude-pattern atlas_schema_revisions",
    "build": "bun build --production --target=bun --minify --splitting --outdir=build bin/prod.ts",
    "start": "wrangler dev",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "catalog:elysia",
    "@cloudflare/containers": "catalog:cloudflare",
    "@elysiajs/static": "catalog:elysia",
    "@libsql/kysely-libsql": "catalog:database",
    "@package/bun-plugin-react-compiler": "workspace:*",
    "@package/ui": "workspace:*",
    "@tanstack/react-router": "catalog:react",
    "@tanstack/react-router-devtools": "catalog:react",
    "@totto2727/fp": "workspace:*",
    "better-auth": "^1.4.18",
    "elysia": "catalog:elysia",
    "kysely": "catalog:database",
    "react": "catalog:react",
    "react-dom": "catalog:react"
  },
  "devDependencies": {
    "@tanstack/router-cli": "catalog:react",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "bun-plugin-tailwind": "catalog:ui",
    "eslint": "catalog:lint",
    "eslint-config-flat-gitignore": "catalog:lint",
    "eslint-plugin-react-hooks": "catalog:lint",
    "jiti": "catalog:lint",
    "kysely-codegen": "catalog:database",
    "typescript-eslint": "catalog:lint"
  }
}
