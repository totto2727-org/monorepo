{
  "devDependencies": {
    "@biomejs/biome": "catalog:lint",
    "@tsconfig/node24": "catalog:dev",
    "@tsconfig/remix": "catalog:dev",
    "@tsconfig/strictest": "catalog:dev",
    "@types/node": "catalog:types",
    "dprint": "catalog:dev",
    "turbo": "catalog:monorepo",
    "typescript": "catalog:dev",
    "wrangler": "catalog:dev"
  },
  "name": "monorepo",
  "packageManager": "pnpm@10.11.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@clerk/shared",
      "@parcel/watcher",
      "@pulumi/docker",
      "@pulumi/docker-build",
      "@tailwindcss/oxide",
      "core-js",
      "core-js-pure",
      "dprint",
      "esbuild",
      "msgpackr-extract",
      "protobufjs",
      "sharp",
      "workerd"
    ]
  },
  "scripts": {
    "check": "$npm_execpath run /check:.*/",
    "check:biome": "biome check",
    "check:dprint": "dprint check",
    "fix": "$npm_execpath run /fix:.*/",
    "fix:biome": "biome check --write --unsafe",
    "fix:dprint": "dprint fmt --allow-no-files",
    "pncat": "nlx pncat",
    "precommit": "turbo fix && turbo check"
  },
  "type": "module"
}
