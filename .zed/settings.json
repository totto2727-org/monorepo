{
  "formatter": "language_server",
  "languages": {
    "JSON": {
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      },
      "formatter": {
        "language_server": {
          "name": "oxfmt"
        }
      }
    },
    "JSONC": {
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      },
      "formatter": {
        "language_server": {
          "name": "oxfmt"
        }
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      },
      "formatter": {
        "language_server": {
          "name": "oxfmt"
        }
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      },
      "formatter": {
        "language_server": {
          "name": "oxfmt"
        }
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      },
      "formatter": {
        "language_server": {
          "name": "oxfmt"
        }
      }
    }
  },
  "lsp": {
    "oxfmt": {
      "initialization_options": {
        "settings": {
          "fmt.configPath": null,
          "run": "onSave"
        }
      }
    },
    "oxlint": {
      "initialization_options": {
        "settings": {
          "fixKind": "all",
          "run": "onType",
          "typeAware": true,
          "unusedDisableDirectives": "deny"
        }
      }
    },
    "vtsls": {
      "enable_lsp_tasks": true,
      "settings": {
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        },
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        }
      }
    }
  }
}
